<p>Découvrez où vous pouvez récolter du cashback</p>
<%# '<%=cloudinary_url(shop.photos[1].path)%>' %>


<% @shops.each do |shop| %>
  <% n = 0 %>
  <% shop.photos.each do |photo|
    n += 1
    @shop_img = cl_image_tag photo.key%>
  <% end %>

  <div class="container">
    <div class="card-product">
      <div class="card-product-top">
        <div class="card-product-top-image" style="background-image: url('<%= @shop_img %>')">  
            
            <i class="fas fa-heart position-icon"></i>
        </div>
        <div class="card-product-info">
          <div>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="far fa-star"></i>
          </div>
          <p><strong> <%= shop.name %> </strong></p>
          <p><%=shop.address%></p>
          <a href="" class="btn-green"> Y aller </a>
        </div>
      </div>

      <%# <img class="card-product-middle" src=`<%= shop_img %>` alt=""> %>
    </div>
  </div> 
<% end %>


